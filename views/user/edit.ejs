<h1>Edit Profile</h1>

<form method="POST" action="/user/update?_method=PUT">

<div>
  <label> First Name</label>
  <input type="text" name="firstName" value="<%= currentUser.firstName %>">
</div>
<div>
  <label> Last Name</label>
  <input type="text" name="lastName" value="<%= currentUser.lastName %>">
</div>
<div>
  <label> Phone Number</label>
  <input type="number" name="phoneNumber" value="<%= currentUser.phoneNumber %>">
</div>
<div>
  <label> email</label>
  <input type="email" name="email" value="<%= currentUser.email %>">
</div>

<input type="hidden" name="id" value="<%= currentUser._id %>">

<div>
  <button type="Submit">Edit Profile</button>
</div>


</form>
