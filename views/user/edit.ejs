<body class="profile-body">
  
  <div class="shadow-lg p-3 mb-5 rounded profileedit-container">
  <div class="profile-items">
    <div class="profile-h1">Edit Profile
      <br>
      <br>
    </div>

<form method="POST" action="/user/update?_method=POST" enctype="multipart/form-data">
  <div class="loginform-items">


<div>
  <label> First Name</label>
  <input class="form-control" type="text" name="firstName" value="<%= currentUser.firstName %>">
</div>

<div>
  <label> Last Name</label>
  <input class="form-control" type="text" name="lastName" value="<%= currentUser.lastName %>">
</div>

<div>
  <label> Phone Number</label>
  <input class="form-control" type="number" name="phoneNumber" value="<%= currentUser.phoneNumber %>">
</div>

<div>
  <label> email</label>
  <input class="form-control" type="email" name="email" value="<%= currentUser.email %>">
</div>

<div>
<label>Image</label>
<input class="form-control" type="file" name="userImage">
</div>

<input type="hidden" name="id" value="<%= currentUser._id %>">
<br>
<div>
  <button class="btn btn-outline-light login-btn" type="Submit">Edit Profile</button>
</div>


</form>

</div>
</div>
</div>

</body>
