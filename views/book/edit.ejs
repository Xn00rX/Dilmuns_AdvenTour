<body class="profile-body">
  <div class="shadow-lg p-3 mb-5 rounded profileinfo-container">
  <div class="profile-items">
    <div class="profile-h1">Edit Booking
      <br>
      <br>
    </div>


<form method="POST" action="/book/edit?_method=PUT">

  <div>
    <label>Name</label>
    <input class="form-control" type="text" name="bookName" value="<%= book.bookName %>">
  </div>

  <div>
    <label>Phone Number</label>
    <input class="form-control" type="text" name="bookNum" value="<%= book.bookNum %>">
  </div>

  <div>
    <label>Number of Tickets</label>
    <input class="form-control" type="text" name="noOfTickets" value="<%= book.noOfTickets%>">
  </div>



  <input type="hidden" name="id" value="<%= book._id%>"/>
<br>

  <div>
    <button class="btn btn-outline-light login-btn" type="submit" name="book">Book</button>
  </div>

</div>
</div>
</form>

