<body class="actdetails-body">

 <div class="details-heading"><h1>Sky is the limit when it comes to AdvenTours</h1></div>

<br>

  <div class="actdetails-container">

<div class="actdetails-items">
  <div class="shadow-lg p-3 mb-5 form-container activity-container" style="background-image: url(<%= activity.activityImage %>);"></div>


 <div class="act-name"><%= activity.actName %></div> 
  <br>
  <br>
<div class="act-description"><%= activity.actDesc %></div>

<br>

<div class="activity-info">
Date: <%= activity.date %>

<br>

Time: <%= activity.time %>

<br>

Place: <%= activity.place %>

<br>
<input type="hidden" name="activityId" value="<%= activity._id %>">
 category: 

  <% activity.category.forEach((category) => { %>
      <%= category.catgName %>
  <% }) %>



<% if(currentUser){ %>
  <br>
  <br>
  <br>
<a href="/review/add?id=<%=activity._id%>"><button class="btn btn-outline-light login-btn" type="submit">Add Review</button></a>  
<a href="/book/add"><button class="btn btn-outline-light login-btn" type="submit">Book</button></a>
<%} %>

<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>

<hr>

<div class="act-review">Reviews</div>

<table>

  <tr>
    <th>Name</th>
    <th>Comment</th>
    <th>Date</th>
   
  </tr>  
  
  <% reviews.forEach((review) => { %>
  
    <tr>
      <td><%= review.user.firstName%> <%= review.user.lastName%></td>
      <td><%= review.comment%></td>
      <td><%= moment(review.updatedAt).fromNow() %></td>
      <% if(currentUser){ %>
      <% if(currentUser._id.equals(review.user._id)){ %>
      <td><a  href="/review/edit?id=<%=review._id%>">Edit</a></td>
      <td><a href="/review/delete?id=<%= review._id %>">Delete</a></td>
      <%}%>
      <%}%>

    </tr>
  
  
  <%}) %>

 </table>
</div>
</div>
</div>


</body>